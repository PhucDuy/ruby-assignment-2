<h1>Message</h1>
<div class="row">
  <div class="col-xs-12 col-md-4">
    <div class="card card-<%= cycle('male', 'female') %>">
      <div class="card-block">
        <h4 class="card-title"><%= @message.sender.name %></h4>
        <p class="card-text"><%= @message.body %></p>
      </div>
    </div>
  </div>
</div>
<div class="row mt-1">
  <div class="col-md-4">
    <%= link_to "Back", messages_path, class: "btn btn-primary" %>
  </div>
</div>