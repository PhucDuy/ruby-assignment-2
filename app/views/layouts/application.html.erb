<!DOCTYPE html>
<html>
  <head>
    <title>Assignment2</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <nav class="navbar navbar-expand-md  navbar-light bg-faded">
      <!-- Toggle Button -->
      <button class="navbar-toggler navbar-toggler-right" 
        type="button" 
        data-toggle="collapse" 
        data-target="#navbarSupportedContent" 
        aria-controls="navbarSupportedContent"
        aria-expanded="false" 
        aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <!-- Nav Content -->
      <div class="collapse navbar-collapse" id="nav-content">
        <a class="navbar-brand" href="/">SimpleChat</a>
        <ul class="nav navbar-nav">
          <% if @current_user.present? %>
            <li class="nav-item">
              <a class="nav-link" href="<%= destroy_session_path %>">Sign In</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="<%= users_path %>">Browse Profiles</a>
            </li>
          <% else %>
            <li class="nav-item">
              <a class="nav-link" href="<%= new_user_path %>">Sign Up</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="<%= new_session_path %>">Sign In</a>
            </li>
          <% end %>
        </ul>
      </div>
    </nav>
    <div class="container">
      <%= flash_messages %>
      <%= yield %>
    </div>
  </body>
</html>